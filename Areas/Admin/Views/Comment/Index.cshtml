@model List<MyWebApp.ViewModels.CommentSummaryViewModel>

<h2>Quản lý bình luận</h2>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Người dùng</th>
        <th>Sản phẩm</th>
        <th>Bình luận mới nhất</th>
        <th>Thời gian</th>
        <th>Tổng bình luận</th>
        <th>Thao tác</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.UserName</td>
            <td>@item.ProductName</td>
            <td>@item.LatestComment</td>
            <td>@item.LatestTime.ToString("dd/MM/yyyy HH:mm")</td>
            <td>@item.TotalComments bình luận</td>
            <td>
                <a asp-action="Detail" asp-route-userId="@item.UserId" class="btn btn-sm btn-info">View</a>
            </td>
        </tr>
    }
    </tbody>
</table>