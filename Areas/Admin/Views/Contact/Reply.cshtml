@model MyWebApp.Models.Contact
@{
    ViewData["Title"] = "Trả lời liên hệ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>💬 Trả lời liên hệ</h2>

<div class = "card mb-3">
    <div class = "card-body">
        <p><strong>👤 Họ tên:</strong> @Model.Name</p>
        <p><strong>📧 Email:</strong> @Model.Email</p>
        <p><strong>📌 Chủ đề:</strong> @Model.Subject</p>
        <p><strong>🕒 Ngày gửi:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
        <p><strong>💬 Nội dung:</strong></p>
        <div class = "p-3 bg-light border">@Model.Message</div>
    </div>
</div>

<form asp-action = "Reply" method = "post">
    <input type = "hidden" asp-for = "Id"/>
    <div class = "mb-3">
        <label for = "reply" class = "form-label">✉️ Nội dung trả lời</label>
        <textarea class = "form-control" id = "reply" name = "reply" rows = "5">@Model.Reply</textarea>
    </div>
    <button type = "submit" class = "btn btn-primary">Gửi trả lời</button>
    <a class = "btn btn-secondary" href = "@Url.Action("Index")">⬅ Quay lại</a>
</form>

@if (!string.IsNullOrEmpty(Model.Reply))
{
    <div class = "alert alert-success mt-3">
        <strong>Đã trả lời lúc:</strong> @Model.ReplyAt?.ToString("dd/MM/yyyy HH:mm") <br/>
        <strong>Nội dung:</strong> @Model.Reply
    </div>
}