@model MyWebApp.Models.GiftPromotion

<h2>Chỉnh sửa khuyến mãi tặng quà</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Tên khuyến mãi</label>
        <input asp-for="GiftName" class="form-control"/>
        <span asp-validation-for="GiftName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Mô tả</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label class="form-label">Sản phẩm yêu cầu</label>
        <select asp-for="RequiredProductId" asp-items="ViewBag.Products" class="form-control">
            <option value="">-- Chọn sản phẩm --</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Sản phẩm quà tặng</label>
        <select asp-for="GiftProductId" asp-items="ViewBag.Products" class="form-control">
            <option value="">-- Chọn sản phẩm --</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Mua bao nhiêu</label>
        <input asp-for="QuantityRequired" class="form-control"/>
    </div>

    <div class="mb-3">
        <label class="form-label">Tặng bao nhiêu</label>
        <input asp-for="QuantityGift" class="form-control"/>
    </div>

    <div class="mb-3">
        <label class="form-label">Ngày bắt đầu</label>
        <input asp-for="StartDate" type="date" class="form-control"/>
    </div>

    <div class="mb-3">
        <label class="form-label">Ngày kết thúc</label>
        <input asp-for="EndDate" type="date" class="form-control"/>
    </div>

    <div class="form-check mb-3">
        <input asp-for="IsActive" class="form-check-input"/>
        <label class="form-check-label">Kích hoạt</label>
    </div>

    <button type="submit" class="btn btn-success">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
