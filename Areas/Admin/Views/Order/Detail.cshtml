@model MyWebApp.Models.Order
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Chi tiết đơn hàng";

    var options = new List<SelectListItem>
    {
        new SelectListItem { Value = "1", Text = "Chờ xác nhận", Selected = Model.Status == 1 },
        new SelectListItem { Value = "2", Text = "Đã xác nhận", Selected = Model.Status == 2 },
        new SelectListItem { Value = "3", Text = "Đã giao", Selected = Model.Status == 3 },
        new SelectListItem { Value = "0", Text = "Đã hủy", Selected = Model.Status == 0 },
    };
}

<div class="container my-5">
    <div class="card shadow-lg mb-4 border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">🧾 Chi tiết đơn hàng</h4>
            <span class="fw-light">Mã đơn: <strong>@Model.OrderCode</strong></span>
        </div>
        <div class="card-body">
            <div class="row g-4">
                <div class="col-md-6">
                    <p><i class="bi bi-person-circle"></i> <strong>Người đặt:</strong> @Model.UserName</p>
                    <p><i class="bi bi-calendar-event"></i> <strong>Ngày đặt:</strong> @Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</p>
                </div>
                <div class="col-md-6">
                    @{
                        var statusText = Model.Status switch
                        {
                            1 => "Chờ xác nhận",
                            2 => "Đã xác nhận",
                            3 => "Đã giao",
                            _ => "Đã hủy"
                        };

                        var badgeClass = Model.Status switch
                        {
                            1 => "badge bg-warning text-dark",
                            2 => "badge bg-primary",
                            3 => "badge bg-success",
                            _ => "badge bg-danger"
                        };
                    }
                    <p>
                        <i class="bi bi-truck"></i> <strong>Trạng thái:</strong>
                        <span class="@badgeClass px-3 py-1 rounded-pill">@statusText</span>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-lg border-0 mb-4">
        <div class="card-header bg-dark text-white">
            <strong>🛒 Danh sách sản phẩm</strong>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover table-bordered align-middle mb-0">
                <thead class="table-light text-center">
                    <tr>
                        <th>#</th>
                        <th>Hình ảnh</th>
                        <th>Tên sản phẩm</th>
                        <th>Giá</th>
                        <th>Số lượng</th>
                        <th>Thành tiền</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    @for (int i = 0; i < Model.OrderDetails.Count; i++)
                    {
                        var item = Model.OrderDetails[i];
                        <tr>
                            <td>@(i + 1)</td>
                            <td>
                                <img src="~/img/product/@item.Product.Image"
                                     alt="@item.Product.Name"
                                     class="img-thumbnail"
                                     style="max-width: 80px; max-height: 80px;" />
                            </td>
                            <td class="text-start">@item.Product?.Name</td>
                            <td>@item.Price.ToString("n0") ₫</td>
                            <td>@item.Quantity</td>
                            <td>@(item.Quantity * item.Price).ToString("n0") ₫</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <form asp-action="UpdateStatus" method="post" class="row g-3 align-items-center mb-4">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.OrderId" />
        <div class="col-auto">
            <label for="statusSelect" class="col-form-label fw-semibold">🛠️ Cập nhật trạng thái:</label>
        </div>
        <div class="col-auto">
            <select name="newStatus" id="statusSelect" class="form-select">
                @foreach (var option in options)
                {
                    <option value="@option.Value" selected="@(option.Selected ? "selected" : null)">
                        @option.Text
                    </option>
                }
            </select>
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-success">
                <i class="bi bi-check-circle-fill"></i> Cập nhật
            </button>
        </div>
    </form>

    <div>
        <a class="btn btn-secondary" asp-action="Index">
            <i class="bi bi-arrow-left-circle"></i> Quay lại danh sách
        </a>
    </div>
</div>
