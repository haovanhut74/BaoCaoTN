@model MyWebApp.ViewModels.ListViewModel
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    uint STT = (uint)((Model.CurrentPage - 1) * 10 + 1);
}

<link rel = "stylesheet" href = "https://cdn.datatables.net/buttons/2.4.1/css/buttons.dataTables.min.css">
<link rel = "stylesheet" href = "/css/Admin/Product.css"/>

<div class = "container mt-4">
    <h2 class = "mb-4 text-primary"><i class = "fa fa-boxes me-2"></i>Quản lý sản phẩm</h2>

    <!-- Form lọc -->
    <form method = "get" class = "row g-3 align-items-end mb-4 shadow-sm bg-light p-3 rounded">
        <div class = "col-md-3">
            <label class = "form-label">🔎 Tên sản phẩm</label>
            <input type = "text" name = "productName" value = "@Model.ProductName" class = "form-control" placeholder = "Nhập tên sản phẩm"/>
        </div>
        <div class = "col-md-2">
            <label class = "form-label">📋 Danh mục</label>
            <select name = "categoryId" class = "form-select">
                <option value = "">-- Tất cả --</option>
                @foreach (var category in Model.Categories)
                {
                    <option value = "@category.Id" selected = "@(Model.CategoryId == category.Id ? "selected" : null)">@category.Name</option>
                }
            </select>
        </div>
        <div class = "col-md-2">
            <label class = "form-label">🏷️ Thương hiệu</label>
            <select name = "brandId" class = "form-select">
                <option value = "">-- Tất cả --</option>
                @foreach (var brand in Model.Brands)
                {
                    <option value = "@brand.Id" selected = "@(Model.BrandId == brand.Id ? "selected" : null)">@brand.Name</option>
                }
            </select>
        </div>
        <div class = "col-md-2">
            <label class = "form-label">💰 Giá (từ)</label>
            <input type = "number" name = "minPrice" value = "@Model.MinPrice" class = "form-control" placeholder = "Min giá" min = "0"/>
        </div>
        <div class = "col-md-2">
            <label class = "form-label">💰 Giá (đến)</label>
            <input type = "number" name = "maxPrice" value = "@Model.MaxPrice" class = "form-control" placeholder = "Max giá" min = "0"/>
        </div>
        <div class = "col-md-2">
            <label class = "form-label">📦 Số lượng (từ)</label>
            <input type = "number" name = "minQuantity" value = "@Model.MinQuantity" class = "form-control" placeholder = "Min số lượng" min = "0"/>
        </div>
        <div class = "col-md-2">
            <label class = "form-label">📦 Số lượng (đến)</label>
            <input type = "number" name = "maxQuantity" value = "@Model.MaxQuantity" class = "form-control" placeholder = "Max số lượng" min = "0"/>
        </div>
        <div class = "col-md-2">
            <button type = "submit" class = "btn btn-primary w-100">
                <i class = "fa fa-filter"></i> Lọc
            </button>
        </div>
        <div class = "col-md-2">
            <a href = "@Url.Action("Index")" class = "btn btn-secondary w-100">
                <i class = "fa fa-undo"></i> Reset
            </a>
        </div>
    </form>

    <div class = "mb-3 text-end">
        <a
            asp-area = "Admin" asp-controller = "Product" asp-action = "ExportCsv"
            asp-route-productName = "@Model.ProductName"
            asp-route-categoryId = "@Model.CategoryId"
            asp-route-brandId = "@Model.BrandId"
            asp-route-minPrice = "@Model.MinPrice"
            asp-route-maxPrice = "@Model.MaxPrice"
            asp-route-minQuantity = "@Model.MinQuantity"
            asp-route-maxQuantity = "@Model.MaxQuantity"
            class = "btn btn-outline-primary me-1"
        >
            <i class = "fa fa-file-csv"></i> Xuất CSV
        </a>
        <a
            asp-area = "Admin" asp-controller = "Product" asp-action = "ExportExcel"
            asp-route-productName = "@Model.ProductName"
            asp-route-categoryId = "@Model.CategoryId"
            asp-route-brandId = "@Model.BrandId"
            asp-route-minPrice = "@Model.MinPrice"
            asp-route-maxPrice = "@Model.MaxPrice"
            asp-route-minQuantity = "@Model.MinQuantity"
            asp-route-maxQuantity = "@Model.MaxQuantity"
            class = "btn btn-outline-success me-1"
        >
            <i class = "fa fa-file-excel"></i> Xuất Excel
        </a>
        <a
            asp-area = "Admin" asp-controller = "Product" asp-action = "ExportPdf"
            asp-route-productName = "@Model.ProductName"
            asp-route-categoryId = "@Model.CategoryId"
            asp-route-brandId = "@Model.BrandId"
            asp-route-minPrice = "@Model.MinPrice"
            asp-route-maxPrice = "@Model.MaxPrice"
            asp-route-minQuantity = "@Model.MinQuantity"
            asp-route-maxQuantity = "@Model.MaxQuantity"
            class = "btn btn-outline-danger"
        >
            <i class = "fa fa-file-pdf"></i> Xuất PDF
        </a>
        <a asp-area = "Admin" asp-action = "Create" asp-controller = "Product" class = "btn btn-success">
            <i class = "fa fa-plus"></i> Thêm sản phẩm
        </a>
    </div>

    @if (!Model.Products.Any())
    {
        <div class = "alert alert-info text-center">Chưa có sản phẩm nào phù hợp với bộ lọc.</div>
    }
    else
    {
        <div class = "table-responsive shadow-sm rounded">
            <table id = "myTable" class = "table table-bordered table-hover align-middle text-center">
                <thead class = "table-dark">
                <tr>
                    <th>#</th>
                    <th>Hình ảnh</th>
                    <th>Tên sản phẩm</th>
                    <th>Giá</th>
                    <th>Số lượng</th>
                    <th>Danh mục</th>
                    <th>Thương hiệu</th>
                    <th>Thao tác</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var product in Model.Products)
                {
                    <tr>
                        <td class = "text-center">@STT</td>
                        <td style = "width: 100px;">
                            <img src = "~/img/product/@product.MainImage" alt = "@product.Name" class = "img-thumbnail" style = "height:60px;object-fit:cover;"/>
                        </td>
                        <td class = "text-start">@product.Name</td>
                        <td>@product.Price.ToString("N0") ₫</td>
                        <td>@product.Quantity</td>
                        <td>@product.Category?.Name</td>
                        <td>@product.Brand?.Name</td>
                        <td style = "width: 200px;">
                            <a asp-area = "Admin" asp-action = "Edit" asp-controller = "Product" asp-route-id = "@product.Id" class = "btn btn-sm btn-warning me-1">
                                <i class = "fa fa-edit"></i> Sửa
                            </a>
                            <a
                                asp-area = "Admin" asp-action = "Delete" asp-controller = "Product" asp-route-id = "@product.Id" class = "btn btn-sm btn-danger me-1"
                                onclick = "return confirm('Bạn có chắc muốn xóa sản phẩm này?');"
                            >
                                <i class = "fa fa-trash"></i> Xoá
                            </a>
                            <a asp-area = "Admin" asp-controller = "ProductSpecification" asp-action = "Index" asp-route-productId = "@product.Id" class = "btn btn-sm btn-info me-1">
                                <i class = "fa fa-cogs"></i> Thông số
                            </a>
                            <a href = "#" class = "btn btn-sm btn-secondary" data-bs-toggle = "modal" data-bs-target = "#imagesModal-@product.Id">
                                <i class = "fa fa-image"></i> Ảnh
                            </a>
                        </td>
                    </tr>

                    <!-- Modal quản lý ảnh -->
                    <div class = "modal fade" id = "imagesModal-@product.Id" tabindex = "-1">
                        <div class = "modal-dialog modal-lg">
                            <div class = "modal-content">
                                <div class = "modal-header">
                                    <h5 class = "modal-title">Quản lý ảnh - @product.Name</h5>
                                    <button type = "button" class = "btn-close" data-bs-dismiss = "modal"></button>
                                </div>
                                <div class = "modal-body">
                                    <div class = "row g-3 mb-3">
                                        @foreach (var img in product.Images)
                                        {
                                            <div class = "col-3 position-relative">
                                                <img src = "@img.ImageUrl" class = "img-fluid rounded" alt = ""/>
                                                <form method = "post" asp-action = "DeleteImage" style = "position:absolute;top:5px;right:5px;">
                                                    <input type = "hidden" name = "ImageId" value = "@img.Id"/>
                                                    <button type = "submit" class = "btn btn-sm btn-danger">&times;
                                                    </button>
                                                </form>
                                            </div>
                                        }
                                    </div>
                                    <form method = "post" asp-action = "AddImage" enctype = "multipart/form-data">
                                        <input type = "hidden" name = "ProductId" value = "@product.Id"/>
                                        <label class = "form-label">Chọn ảnh phụ</label>
                                        <input
                                            type = "file" name = "ImageFile" id = "ImageFile-@product.Id" required class = "form-control"
                                            onchange = "previewImage(this, 'imgPreview-@product.Id')"
                                        />
                                        <img id = "imgPreview-@product.Id" class = "img-thumbnail mt-2 mb-2" style = "max-height:150px; display:none;"/>
                                        <button type = "submit" class = "btn btn-success mt-2">Thêm ảnh</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    STT++;
                }
                </tbody>
            </table>
        </div>

        <!-- Phân trang -->
        @if (Model.TotalPages > 1)
        {
            <nav aria-label = "Page navigation" class = "mt-4">
                <ul class = "pagination justify-content-center">
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class = "page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a
                                class = "page-link"
                                asp-action = "Index"
                                asp-route-page = "@i"
                                asp-route-productName = "@Model.ProductName"
                                asp-route-categoryId = "@Model.CategoryId"
                                asp-route-brandId = "@Model.BrandId"
                                asp-route-minPrice = "@Model.MinPrice"
                                asp-route-maxPrice = "@Model.MaxPrice"
                                asp-route-minQuantity = "@Model.MinQuantity"
                                asp-route-maxQuantity = "@Model.MaxQuantity"
                            >
                                @i
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        }
    }
</div>

@section Scripts {
    <script src = "https://cdn.datatables.net/buttons/2.4.1/js/dataTables.buttons.min.js"></script>
    <script src = "https://cdn.datatables.net/buttons/2.4.1/js/buttons.html5.min.js"></script>
    <script src = "https://cdn.datatables.net/buttons/2.4.1/js/buttons.print.min.js"></script>
    <script src = "https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script src = "https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
    <script src = "https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>
    <script>
        function previewImage(input, previewId) {
            const file = input.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    const img = document.getElementById(previewId);
                    img.src = e.target.result;
                    img.style.display = "block";
                };
                reader.readAsDataURL(file);
            }
        }

        $(document).ready(function () {
            $('#myTable').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    {
                        extend: 'csvHtml5',
                        text: '<i class="fa fa-file-csv"></i> CSV',
                        className: 'btn btn-outline-primary',
                        bom: true
                    },
                    {
                        extend: 'excelHtml5',
                        text: '<i class="fa fa-file-excel"></i> Excel',
                        className: 'btn btn-outline-success'
                    },
                    {
                        extend: 'pdfHtml5',
                        text: '<i class="fa fa-file-pdf"></i> PDF',
                        className: 'btn btn-outline-danger'
                    },
                    {extend: 'print', text: '<i class="fa fa-print"></i> In', className: 'btn btn-outline-secondary'}
                ],
                language: {url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/vi.json'}
            });
        });
    </script>
}