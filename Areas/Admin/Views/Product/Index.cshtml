@model MyWebApp.ViewModels.ListViewModel


@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    uint STT = (uint)((Model.CurrentPage - 1) * 10 + 1); // Bắt đầu theo page
}
<link rel = "stylesheet" href = "https://cdn.datatables.net/buttons/2.4.1/css/buttons.dataTables.min.css">
<div class = "container mt-4">
    <h2 class = "mb-4 text-primary"><i class = "fa fa-boxes me-2"></i>Quản lý sản phẩm</h2>

    <div class = "mb-3 text-end">
        <a asp-area = "Admin" asp-action = "Create" asp-controller = "Product" class = "btn btn-success">
            <i class = "fa fa-plus"></i> Thêm sản phẩm
        </a>
    </div>

    @if (!Model.Products.Any())
    {
        <div class = "alert alert-info text-center">Chưa có sản phẩm nào được thêm.</div>
    }
    else
    {
        <div class = "table-responsive shadow-sm rounded">
            <div class = "mb-3 text-end">
                <a asp-area = "Admin" asp-controller = "Product" asp-action = "ExportCsv" class = "btn btn-outline-primary me-1">
                    <i class = "fa fa-file-csv"></i> Xuất CSV
                </a>
                <a asp-area = "Admin" asp-controller = "Product" asp-action = "ExportExcel" class = "btn btn-outline-success me-1">
                    <i class = "fa fa-file-excel"></i> Xuất Excel
                </a>
                <a asp-area = "Admin" asp-controller = "Product" asp-action = "ExportPdf" class = "btn btn-outline-danger">
                    <i class = "fa fa-file-pdf"></i> Xuất PDF
                </a>
            </div>

            <table id = "myTable" class = "table table-bordered table-hover align-middle text-center">
                <thead class = "table-dark">
                <tr>
                    <th>#</th>
                    <th>Hình ảnh</th>
                    <th>Tên sản phẩm</th>
                    <th>Giá</th>
                    <th>Số lượng</th>
                    <th>Danh mục</th>
                    <th>Thương hiệu</th>
                    <th>Thao tác</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var product in Model.Products)
                {
                    <tr>
                        <td class = "text-center">@STT</td>
                        <td style = "width: 100px;">
                            <img src = "~/img/product/@product.Image" alt = "@product.Name" class = "img-thumbnail" style = "height: 60px;"/>
                        </td>
                        <td class = "text-start">@product.Name</td>
                        <td>@product.Price.ToString("N0") ₫</td>
                        <td>@product.Quantity</td>
                        <td>@product.Category?.Name</td>
                        <td>@product.Brand?.Name</td>
                        <td style = "width: 160px;">
                            <a asp-area = "Admin" asp-action = "Edit" asp-controller = "Product" asp-route-id = "@product.Id" class = "btn btn-sm btn-warning me-1">
                                <i class = "fa fa-edit"></i> Sửa
                            </a>
                            <a asp-area = "Admin" asp-action = "Delete" asp-controller = "Product" asp-route-id = "@product.Id" class = "btn btn-sm btn-danger" onclick = "return confirm('Bạn có chắc muốn xóa sản phẩm này?');">
                                <i class = "fa fa-trash"></i> Xoá
                            </a>
                        </td>
                    </tr>
                    STT++;
                }
                </tbody>
            </table>

        </div>
    }
    @await Html.PartialAsync("_Paganite", Model) <!-- Partial view for pagination -->
</div>

@section Scripts {

    <script src = "https://cdn.datatables.net/buttons/2.4.1/js/dataTables.buttons.min.js"></script>
    <script src = "https://cdn.datatables.net/buttons/2.4.1/js/buttons.html5.min.js"></script>
    <script src = "https://cdn.datatables.net/buttons/2.4.1/js/buttons.print.min.js"></script>
    <script src = "https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script src = "https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
    <script src = "https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    {
                        extend: 'csvHtml5',
                        text: '<i class="fa fa-file-csv"></i> CSV',
                        className: 'btn btn-outline-primary'
                    },
                    {
                        extend: 'excelHtml5',
                        text: '<i class="fa fa-file-excel"></i> Excel',
                        className: 'btn btn-outline-success'
                    },
                    {
                        extend: 'pdfHtml5',
                        text: '<i class="fa fa-file-pdf"></i> PDF',
                        className: 'btn btn-outline-danger'
                    },
                    {
                        extend: 'print',
                        text: '<i class="fa fa-print"></i> In',
                        className: 'btn btn-outline-secondary'
                    },
                    {
                        extend: 'csvHtml5',
                        text: '<i class="fa fa-file-csv"></i> CSV',
                        className: 'btn btn-outline-primary',
                        bom: true // <-- thêm bom để Excel đọc đúng UTF-8
                    }
                ],
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/vi.json'
                }
            });
        });

    </script>
}
