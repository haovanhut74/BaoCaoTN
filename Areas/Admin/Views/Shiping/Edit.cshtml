@model MyWebApp.Models.Shiping

@{
    ViewData["Title"] = "Sửa phí giao hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class = "container mt-5">
    <div class = "row justify-content-center">
        <div class = "col-lg-8 col-md-10">
            <div class = "card shadow-lg border-0 rounded-3">
                <div class = "card-header bg-success text-white d-flex align-items-center">
                    <i class = "fa fa-edit me-2"></i>
                    <h5 class = "mb-0">Sửa phí giao hàng</h5>
                </div>
                <div class = "card-body p-4">
                    <form asp-action = "Edit" method = "post" id = "formShiping">
                        <div asp-validation-summary = "ModelOnly" class = "alert alert-danger"></div>

                        <input type = "hidden" asp-for = "Id"/>

                        <!-- Thành phố -->
                        <div class = "mb-4">
                            <label class = "form-label fw-semibold">Thành phố</label>
                            <select id = "tinh" class = "form-select shadow-sm" required>
                                <option value = "">-- Chọn Tỉnh/Thành phố --</option>
                            </select>
                            <input type = "hidden" asp-for = "City"/>
                            <span asp-validation-for = "City" class = "text-danger"></span>
                        </div>

                        <!-- Quận/Huyện -->
                        <div class = "mb-4">
                            <label class = "form-label fw-semibold">Quận/Huyện</label>
                            <select asp-for = "District" id = "quan" class = "form-select shadow-sm" required>
                                <option value = "">-- Chọn Quận/Huyện --</option>
                            </select>
                            <span asp-validation-for = "District" class = "text-danger"></span>
                        </div>

                        <!-- Giá ship -->
                        <div class = "mb-4">
                            <label class = "form-label fw-semibold">Giá</label>
                            <input type = "number" asp-for = "Price" class = "form-control shadow-sm" required min = "0"/>
                            <span asp-validation-for = "Price" class = "text-danger"></span>
                        </div>

                        <div class = "d-flex justify-content-between">
                            <a asp-action = "Index" class = "btn btn-outline-secondary px-4">
                                <i class = "fa fa-arrow-left me-1"></i> Quay lại
                            </a>
                            <button type = "submit" class = "btn btn-success px-4">
                                <i class = "fa fa-save me-1"></i> Lưu
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script src = "https://esgoo.net/scripts/jquery.js"></script>

    <script>
        $(document).ready(function () {
            var selectedCity = "@Model.City";
            var selectedDistrict = "@Model.District";

            // Load danh sách tỉnh
            $.getJSON('https://esgoo.net/api-tinhthanh-new/1/0.htm', function (data_tinh) {
                if (data_tinh.error === 0) {
                    $.each(data_tinh.data, function (_, val_tinh) {
                        var isSelected = (val_tinh.full_name === selectedCity) ? "selected" : "";
                        $("#tinh").append('<option value="' + val_tinh.id + '" ' + isSelected + '>' + val_tinh.full_name + '</option>');
                    });

                    // nếu có City thì load quận luôn
                    if (selectedCity) {
                        var idtinh = $("#tinh").val();
                        $("input[name='City']").val(selectedCity);

                        $.getJSON('https://esgoo.net/api-tinhthanh-new/2/' + idtinh + '.htm', function (data_quan) {
                            if (data_quan.error === 0) {
                                $.each(data_quan.data, function (_, val_quan) {
                                    var isQSelected = (val_quan.full_name === selectedDistrict) ? "selected" : "";
                                    $("#quan").append('<option value="' + val_quan.full_name + '" ' + isQSelected + '>' + val_quan.full_name + '</option>');
                                });
                            }
                        });
                    }
                }
            });

            // Khi chọn tỉnh mới -> load quận
            $("#tinh").change(function () {
                var idtinh = $(this).val();
                var tinhText = $("#tinh option:selected").text();
                $("input[name='City']").val(tinhText);

                $("#quan").html('<option value="">-- Chọn Quận/Huyện --</option>');

                $.getJSON('https://esgoo.net/api-tinhthanh-new/2/' + idtinh + '.htm', function (data_quan) {
                    if (data_quan.error === 0) {
                        $.each(data_quan.data, function (_, val_quan) {
                            $("#quan").append('<option value="' + val_quan.full_name + '">' + val_quan.full_name + '</option>');
                        });
                    }
                });
            });

            // Validate khi submit
            $("#formShiping").submit(function () {
                if (!$("input[name='City']").val() || !$("#quan").val()) {
                    alert("Vui lòng chọn đầy đủ Thành phố và Quận/Huyện.");
                    return false;
                }
            });
        });
    </script>
}
