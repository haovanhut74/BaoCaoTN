@model IEnumerable<MyWebApp.Models.Shiping>

@{
    ViewData["Title"] = "Danh sách phí giao hàng";
}

<div class = "container mt-4">
    <div class = "card shadow-lg border-0 rounded-3">
        <div class = "card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class = "mb-0">📦 Danh sách phí giao hàng</h4>
            <a asp-action = "Create" class = "btn btn-light btn-sm fw-bold">
                ➕ Thêm mới
            </a>
        </div>
        <div class = "card-body">
            <div class = "table-responsive">
                <table class = "table table-hover align-middle text-center">
                    <thead class = "table-light">
                    <tr>
                        <th>🏙️ Thành phố</th>
                        <th>📍 Quận/Huyện</th>
                        <th>💰 Giá ship</th>
                        <th>⚙️ Hành động</th>
                    </tr>
                    </thead>
                    <tbody id = "shipingTable">
                    @foreach (var item in Model)
                    {
                        <tr data-id = "@item.Id">
                            <td>@item.City</td>
                            <td>@item.District</td>
                            <td class = "fw-bold text-success">@item.Price.ToString("N0") đ</td>
                            <td>
                                <a asp-action = "Edit" asp-route-id = "@item.Id" class = "btn btn-sm btn-warning me-1">
                                    ✏️ Sửa
                                </a>
                                <button class = "btn btn-sm btn-danger btn-delete" data-id = "@item.Id">
                                    🗑️ Xóa
                                </button>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src = "https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).on("click", ".btn-delete", function () {
            if (!confirm("Bạn có chắc muốn xóa phí ship này không?")) return;

            var id = $(this).data("id");
            var row = $("tr[data-id='" + id + "']");

            $.ajax({
                url: '@Url.Action("DeleteAjax", "Shiping", new { area = "Admin" })',
                type: 'POST',
                data: {id: id},
                success: function (res) {
                    if (res.success) {
                        row.fadeOut(400, function () {
                            $(this).remove();
                        }); // Hiệu ứng xóa mềm mại
                    } else {
                        alert(res.message || "Có lỗi xảy ra");
                    }
                },
                error: function () {
                    alert("Không thể xóa. Vui lòng thử lại!");
                }
            });
        });
    </script>
}
