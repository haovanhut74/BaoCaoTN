@model IEnumerable<MyWebApp.Models.Shiping>

@{
    ViewData["Title"] = "Quản lý phí giao hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class = "container mt-5">
    <div class = "card shadow-lg border-0">
        <div class = "card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class = "mb-0"><i class = "fa fa-truck me-2"></i>Danh sách phí giao hàng</h4>
            <a asp-area = "Admin" asp-controller = "Shiping" asp-action = "Create" class = "btn btn-light btn-sm">
                <i class = "fa fa-plus-circle"></i> Thêm phí mới
            </a>
        </div>

        <div class = "card-body">
            <table class = "table table-hover align-middle">
                <thead class = "table-light">
                <tr>
                    <th>#</th>
                    <th>Khu vực</th>
                    <th>Phường/Quận</th>
                    <th>Phí giao hàng</th>
                    <th class = "text-center">Thao tác</th>
                </tr>
                </thead>
                <tbody>
                @if (Model != null && Model.Any())
                {
                    int stt = 1;
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@stt</td>
                            <td>@item.City</td>
                            <td>@item.District</td>
                            <td>@($"{item.Price:N0} đ")</td>
                            <td class = "text-center">
                                <a
                                    asp-area = "Admin" asp-controller = "Shipping" asp-action = "Edit" asp-route-id = "@item.Id"
                                    class = "btn btn-sm btn-warning me-1"
                                >
                                    <i class = "fa fa-edit"></i> Sửa
                                </a>
                                <a
                                    asp-area = "Admin" asp-controller = "Shipping" asp-action = "Delete" asp-route-id = "@item.Id"
                                    class = "btn btn-sm btn-danger"
                                    onclick = "return confirm('Bạn có chắc chắn muốn xóa?');"
                                >
                                    <i class = "fa fa-trash"></i> Xóa
                                </a>
                            </td>
                        </tr>
                        stt++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan = "5" class = "text-center text-muted">
                            <i class = "fa fa-info-circle"></i> Chưa có dữ liệu phí giao hàng
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
