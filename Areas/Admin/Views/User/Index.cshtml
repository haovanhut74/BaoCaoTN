@model IEnumerable<MyWebApp.Models.ApplicationUser>

@{
    ViewData["Title"] = "Quản lý người dùng";
}

<h2 class = "text-primary mb-4">Quản lý người dùng</h2>

<table class = "table table-hover table-bordered shadow-sm rounded">
    <thead class = "table-dark">
    <tr>
        <th>#</th>
        <th>Tên đăng nhập</th>
        <th>Email</th>
        <th>Số điện thoại</th>
        <th>Ngày tạo</th>
        <th>Trạng thái</th>
        <th>Hành động</th>
    </tr>
    </thead>
    <tbody>
    @if (!Model.Any())
    {
        <tr>
            <td colspan = "7" class = "text-center text-muted">Không có người dùng nào.</td>
        </tr>
    }
    else
    {
        int index = 1;
        foreach (var user in Model)
        {
            <tr>
                <td>@(index++)</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>@user.CreatedDate.ToString("dd/MM/yyyy")</td>
                <td>
                    @if (user.LockoutEnabled && user.LockoutEnd > DateTimeOffset.Now)
                    {
                        <span class = "badge bg-danger">Bị khóa</span>
                    }
                    else
                    {
                        <span class = "badge bg-success">Hoạt động</span>
                    }
                </td>
                <td>
                    <a class = "btn btn-sm btn-info" asp-action = "Detail" asp-route-id = "@user.Id">Chi tiết</a>
                    <a class = "btn btn-sm btn-warning" asp-action = "Lock" asp-route-id = "@user.Id">Khóa</a>
                    <a
                        class = "btn btn-sm btn-danger" asp-action = "Delete" asp-route-id = "@user.Id"
                        onclick = "return confirm('Bạn có chắc muốn xóa người dùng này?')"
                    >Xóa</a>
                </td>
            </tr>
        }
    }
    </tbody>
</table>
