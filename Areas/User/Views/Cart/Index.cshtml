@model MyWebApp.ViewModels.CartItemViewModel
@{
    ViewData["Title"] = "Giỏ hàng";
    decimal grandTotal = Model.TotalPrice;
}

<div class = "container my-5">
    <h2 class = "mb-4 text-primary"><i class = "fa fa-shopping-cart me-2"></i>Giỏ hàng của bạn</h2>

    @if (Model.CartItems == null || !Model.CartItems.Any())
    {
        <div class = "alert alert-info text-center">
            Giỏ hàng của bạn đang trống. <a asp-action = "Index" asp-controller = "Home" class = "alert-link">Mua sắm
                ngay</a>!
        </div>
    }
    else
    {
        <div class = "table-responsive">
            <table class = "table table-bordered align-middle text-center shadow-sm">
                <thead class = "table-dark">
                <tr>
                    <th>Hình ảnh</th>
                    <th>Sản phẩm</th>
                    <th>Đơn giá</th>
                    <th>Số lượng</th>
                    <th>Thành tiền</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.CartItems)
                {
                    <tr>
                        <td style = "width: 120px;">
                            <img src = "~/img/product/@item.ImageUrl" class = "img-thumbnail" style = "height: 80px;"/>
                        </td>
                        <td class = "text-start">@item.ProductName</td>
                        <td>@item.Price.ToString("N0") ₫</td>
                        <td style = "width: 150px;">
                            <div class = "input-group justify-content-center">
                                <a asp-controller="Cart" asp-action = "Decrease" asp-route-id = "@item.Id" class = "btn btn-outline-secondary">-</a>
                                <input type = "text" class = "form-control text-center" name="quantity" value = "@item.Quantity" readonly style = "max-width: 50px;"/>
                                <a asp-controller="Cart" asp-action = "Increase" asp-route-id = "@item.Id" class = "btn btn-outline-secondary">+</a>
                            </div>
                        </td>
                        <td class = "fw-bold text-danger">@Model.CartItems.Where(x => x.Id == item.Id).Sum(x => x.Quantity * x.Price).ToString("N0")₫
                        </td>
                        <td>
                            <a asp-controller="Cart" asp-action = "Remove" asp-route-id = "@item.Id" class = "btn btn-danger btn-sm">
                                <i class = "fa fa-trash"></i> Xóa
                            </a>
                        </td>
                    </tr>
                }
                </tbody>
                <tfoot>
                <tr class = "table-secondary fw-bold">
                    <td colspan = "4" class = "text-end">Tổng cộng:</td>
                    <td class = "text-danger fs-5">@grandTotal.ToString("N0") ₫</td>
                    <td></td>
                </tr>
                </tfoot>
            </table>
        </div>

        <div class = "d-flex justify-content-between mt-4">
            <a asp-action = "Index" asp-controller = "Home" class = "btn btn-outline-secondary">
                <i class = "fa fa-arrow-left me-1"></i> Tiếp tục mua sắm
            </a>
            <a asp-action = "Checkout" class = "btn btn-success px-4">
                <i class = "fa fa-credit-card me-1"></i> Thanh toán
            </a>
        </div>
    }
</div>
