@model MyWebApp.Models.Contact
@{
    ViewData["Title"] = "Liên hệ";
}

<h2 class = "mb-4">Liên hệ với chúng tôi</h2>

@if (ViewBag.Success != null)
{
    <div class = "alert alert-success">@ViewBag.Success</div>
}

<div class = "row">
    <!-- Form liên hệ -->
    <div class = "col-md-6">
        <form method = "post" class = "border p-3 rounded shadow-sm bg-white">
            <div class = "mb-3">
                <label asp-for = "Name" class = "form-label">Họ và tên</label>
                <input asp-for = "Name" class = "form-control"/>
                <span asp-validation-for = "Name" class = "text-danger"></span>
            </div>
            <div class = "mb-3">
                <label asp-for = "Email" class = "form-label">Email</label>
                <input asp-for = "Email" class = "form-control"/>
                <span asp-validation-for = "Email" class = "text-danger"></span>
            </div>
            <div class = "mb-3">
                <label asp-for = "Subject" class = "form-label">Tiêu đề</label>
                <input asp-for = "Subject" class = "form-control"/>
                <span asp-validation-for = "Subject" class = "text-danger"></span>
            </div>
            <div class = "mb-3">
                <label asp-for = "Message" class = "form-label">Nội dung</label>
                <textarea asp-for = "Message" rows = "5" class = "form-control"></textarea>
                <span asp-validation-for = "Message" class = "text-danger"></span>
            </div>
            <button type = "submit" class = "btn btn-primary">Gửi liên hệ</button>
        </form>
    </div>

    <!-- Google Maps -->
    <div class="col-md-6">
        <h5 class="mb-3">Vị trí của chúng tôi</h5>
        <iframe 
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.4810816216494!2d106.6730721!3d10.980689299999998!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3174d1085e2b1c37%3A0x73bfa5616464d0ee!2zVHLGsOG7nW5nIMSQ4bqhaSBob8OgbCBDaOG7pW5nIFRo4buVIMSQ4bqldSBN4buZdA!5e0!3m2!1svi!2s!4v1690000000000!5m2!1svi!2s" 
            width="100%" height="350" style="border:0;" allowfullscreen="" loading="lazy"
            referrerpolicy="no-referrer-when-downgrade">
        </iframe>
    </div>

</div>

@section Scripts {
    <partial name = "_ValidationScriptsPartial"/>
}