@model MyWebApp.ViewModels.ErrorViewModel

@{
    ViewData["Title"] = "Lỗi";
}
<div class = "container text-center py-5">
    <h1 class = "display-4 text-danger">Đã xảy ra lỗi ❌</h1>
    <p class = "lead">Chúng tôi rất tiếc vì sự bất tiện này.</p>

    @if (Model?.ShowRequestId == true)
    {
        <p><strong>Mã lỗi:</strong> @Model.RequestId</p>
    }

    <a href = "/" class = "btn btn-outline-secondary mt-3">
        <i class = "bi bi-house-door"></i> Quay lại trang chủ
    </a>
</div>