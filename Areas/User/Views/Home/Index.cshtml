@model MyWebApp.ViewModels.ProductFilterViewModel
@{
    ViewData["Title"] = "Danh sách sản phẩm";
}
<!-- Hiển thị sản phẩm -->
<div class="row row-cols-1 row-cols-md-3 g-4 mt-4">
    @foreach (var product in Model.Products)
    {
        <div class="col">
            <div class="card h-100 shadow-sm">
                <img src="~/img/product/@product.Image" class="card-img-top" alt="@product.Name" />
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">@product.Category.Name - @product.Brand.Name</p>
                    <p class="text-danger fw-bold">@product.Price.ToString("N0") ₫</p>
                </div>
            </div>
        </div>
    }
</div>