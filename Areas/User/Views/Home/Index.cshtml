@model MyWebApp.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Danh sách sản phẩm";
    ViewData["col-12"] = true;
    ViewData["HideLayoutPart"] = true;
}
<link rel = "stylesheet" href = "~/css/User/HomeIndex.css"/>
<div class="main-container">
    <!-- Welcome Section -->
    <div class="welcome-section fade-in-up">
        <h1 class="welcome-title">🛍️ Chào mừng đến với cửa hàng</h1>
        <p class="welcome-subtitle">Khám phá những sản phẩm tuyệt vời với giá tốt nhất</p>
    </div>

    <!-- Hero Slider -->
    @if (Model.Sliders != null && Model.Sliders.Any())
    {
        <div id="homeSlider" class="carousel slide hero-slider fade-in-up" data-bs-ride="carousel" data-bs-interval="5000">
            <div class="carousel-indicators">
                @for (int i = 0; i < Model.Sliders.Count; i++)
                {
                    <button type="button" data-bs-target="#homeSlider" data-bs-slide-to="@i" 
                            class="@(i == 0 ? "active" : "")" aria-label="Slide @(i + 1)"></button>
                }
            </div>
            
            <div class="carousel-inner">
                @for (int i = 0; i < Model.Sliders.Count; i++)
                {
                    var slider = Model.Sliders[i];
                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        <img src="~/img/slider/@slider.Image" 
                             class="d-block w-100" 
                             alt="@slider.Title"
                             loading="@(i == 0 ? "eager" : "lazy")"/>
                    </div>
                }
            </div>
            
            <button class="carousel-control-prev" type="button" data-bs-target="#homeSlider" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Trước</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#homeSlider" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Tiếp</span>
            </button>
        </div>
    }

    <!-- Product Sections -->
    <!-- Top Sale -->
    <section class="products-section fade-in-up">
        <div class="section-header">
            <h2 class="section-title top-sale">🔥 Top Sale 🔥</h2>
            <p class="section-subtitle">Những sản phẩm giảm giá hot nhất</p>
        </div>
        @await Html.PartialAsync("_ProductListHome", Model.TopSale)
    </section>

    <!-- Most Bought -->
    <section class="products-section fade-in-up">
        <div class="section-header">
            <h2 class="section-title most-bought">🛒 Mua nhiều 🛒</h2>
            <p class="section-subtitle">Sản phẩm được yêu thích nhất</p>
        </div>
        @await Html.PartialAsync("_ProductListHome", Model.MostBought)
    </section>

    <!-- Newest -->
    <section class="products-section fade-in-up">
        <div class="section-header">
            <h2 class="section-title newest">✨ Mới đăng bán ✨</h2>
            <p class="section-subtitle">Những sản phẩm mới nhất vừa ra mắt</p>
        </div>
        @await Html.PartialAsync("_ProductListHome", Model.Newest)
    </section>

    <!-- Most Reviewed -->
    <section class="products-section fade-in-up">
        <div class="section-header">
            <h2 class="section-title most-reviewed">⭐ Nhiều review ⭐</h2>
            <p class="section-subtitle">Sản phẩm có nhiều đánh giá tốt nhất</p>
        </div>
        @await Html.PartialAsync("_ProductListHome", Model.MostReviewed)
    </section>
    
</div>

<!-- Bootstrap CSS -->
<link href = "https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel = "stylesheet"/>

<!-- Bootstrap JS -->
<script src = "https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>