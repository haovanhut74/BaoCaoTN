@model MyWebApp.Models.News

@{
    ViewData["Title"] = Model.Title;
    ViewData["col-12"] = true;
}
<link rel = "stylesheet" href = "~/css/User/NewsDetails.css">
<link href = "https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel = "stylesheet">
<link href = "https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel = "stylesheet">
<div class = "container-fluid px-4">
    <!-- Header Section -->
    <div class = "row justify-content-center">
        <div class = "col-12 col-lg-10 col-xl-8">

            <!-- Article Card -->
            <article class = "card shadow-lg border-0 mb-5">
                <!-- Article Header -->
                <div class = "card-header bg-white border-0 pt-4 pb-3">
                    <h1 class = "card-title mb-3 fw-bold text-dark lh-sm">
                        @Model.Title
                    </h1>

                    <div class = "d-flex align-items-center text-muted small">
                        <i class = "far fa-calendar-alt me-2"></i>
                        <span class = "me-4">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</span>
                        <i class = "far fa-user me-2"></i>
                        <span>@Model.Author</span>
                    </div>
                </div>

                <!-- Article Content -->
                <div class = "card-body px-4 py-4">
                    <div class = "article-content">
                        @Html.Raw(Model.Content)
                    </div>
                </div>
            </article>

            <!-- Navigation Buttons -->
            <div class = "d-flex justify-content-between align-items-center mb-5">
                <a class = "btn btn-outline-secondary btn-lg px-4" href = "@Url.Action("Index", "News")">
                    <i class = "fas fa-arrow-left me-2"></i>
                    Quay lại danh sách
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Custom CSS -->



<script src = "https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
