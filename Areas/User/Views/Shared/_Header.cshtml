<header class = "bg-white shadow-sm py-3 mb-3">
    <div class = "container d-flex justify-content-between align-items-center">
        <a href = "/" class = "d-flex align-items-center gap-2 text-decoration-none">
            <img src = "~/img/logo.png" alt = "E-Tech" style = "height:50px;">
            <h4 class = "m-0 text-primary">E-Tech Store</h4>
        </a>
        <div class = "d-flex gap-3">
            @if (User.Identity?.IsAuthenticated ?? false)
            {
                <a class = "btn btn-success">@User.Identity.Name</a>
                <form asp-area = "User" asp-controller = "Account" asp-action = "Logout" method = "post" class = "d-inline">
                    <button type = "submit" class = "btn btn-outline-warning">Đăng xuất</button>
                </form>
            }
            else
            {
                <a asp-area = "User" asp-controller = "Account" asp-action = "Login" class = "btn btn-primary">Đăng
                    nhập</a>
            }

        </div>
    </div>
</header>